<%  provide(:title, "Home Page") %>
<div class="row">
	<div class="col-lg-12">
		<h1>Welcome to the sample App</h1>
		<p>This is the home page for the sample application </p>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<% if logged_in? %>

			<p> Welcome <%= @current_user.name %> </p>
			<p> Your e-mail is : <%= @current_user.email %>  </p>



		<% else %>
			<%= link_to(signup_path, class: "btn btn-primary btn-success") do %>
			<span class="glyphicon glyphicon-ok-sign"></span> Sign up now !
			<% end %>
			<p style="margin-top: 10px;"> Or </p>
			<%= link_to(login_path, class: "btn btn-primary") do %>
			<span class="glyphicon glyphicon-ok-sign"></span> Log In
			<% end %>
		<% end %>
	</div>
</div>