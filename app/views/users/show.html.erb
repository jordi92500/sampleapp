
<% if @user.id!=current_user.id %>
	<script type="text/javascript">
		window.location.href= '<%= user_path(current_user) %>'
	</script>
<% else %>
	<% provide(:title, @user.name) %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<h1>
					<%= gravatar_for @user %>	
					<%= @user.name %>
				</h1>
			</section>
		</aside>
	</div>
<% end %>
