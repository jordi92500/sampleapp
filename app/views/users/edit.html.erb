<div class="text-center">
	<% provide(:title, "Edit user") %>
	<h1>Update your profile</h1>
	  <div class="row">
	    <div class="col-md-6 col-md-offset-3">
	      <%= form_for(@user,  :html => {:class => "label-1"}) do |f| %>
	        <%= render 'shared/error_messages', object: f.object %>
	        <%= f.label :name, class: "label-1" %>
	        <%= f.text_field :name, class: "input-align form-control" %>

	        <%= f.label :email, class: "label-1" %>
	        <%= f.email_field :email, class: "input-align form-control" %>

	        <%= f.label :password, class: "label-1" %>
	        <%= f.password_field :password, class: "input-align form-control" %>

	        <%= f.label :password_confirmation, "Confirmation", class: "label-1" %>
	        <%= f.password_field :password_confirmation, class: "input-align form-control" %>

	        <%= f.submit "Update my profile", class: "btn btn-primary input-align" %>
	      <% end %>
		    <div class="gravatar_edit">
		      <%= gravatar_for @user %>
		      <a href="http://gravatar.com/emails" target=_blank>change</a>
		    </div>
	  </div>
	</div>
</div>